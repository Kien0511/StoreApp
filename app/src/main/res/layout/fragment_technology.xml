<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--<android.support.v4.view.ViewPager-->
        <!--android:id="@+id/viewpager_slide_technology"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="150dp">-->

        <!--</android.support.v4.view.ViewPager>-->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_technology"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGray2">


        </android.support.v7.widget.RecyclerView>

        <ImageView
            android:id="@+id/im1_fragment_technology"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/dulich" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorGray2"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/im2_fragment_technology"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/festivalsale90" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorTranparentBlack"
                    android:gravity="center"
                    android:padding="30dp"
                    android:text="Top 150 SKU Bán Chạy Trong Tháng"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />


            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/im3_fragment_technology"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:scaleType="fitXY"
                    android:src="@drawable/festivalsale90" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorTranparentBlack"
                    android:gravity="center"
                    android:padding="30dp"
                    android:text="Top Smartphone Chất Lượng Giá Rẻ"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />
            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/im4_fragment_technology"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/festivalsale90" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorTranparentBlack"
                    android:gravity="center"
                    android:padding="30dp"
                    android:text="Camere Hành Động Polaroid Hot"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />


            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/im5_fragment_technology"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/festivalsale90" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorTranparentBlack"
                    android:gravity="center"
                    android:padding="30dp"
                    android:text="Tivi giá đặc biệt cho các tỉnh lớn"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />
            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/im6_fragment_technology"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/dienthoai" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:background="@color/colorTranparentBlack"
                    android:gravity="center"
                    android:text="Điện thoại giá rẻ"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />


            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/im7_fragment_technology"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/tiviled24inchesariang" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:background="@color/colorTranparentBlack"
                    android:gravity="center"
                    android:text="Tivi giá đặc biệt cho các tỉnh lớn"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/im8_fragment_technology"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/sony" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:background="@color/colorTranparentBlack"
                    android:gravity="center"
                    android:text="Tivi giá đặc biệt cho các tỉnh lớn"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />
            </FrameLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGray2"
            android:padding="10dp"
            android:text="Top những thương hiệu lớn"
            android:textSize="18sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_toptrademark_technology"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:clipToPadding="false"
            android:padding="5dp">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGray2"
            android:padding="10dp"
            android:text="Hàng mới về"
            android:textSize="18sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_productnew_technology"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:padding="5dp">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#cfc9c9"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_bt_technology"
                    android:drawableTop="@drawable/iconbag"
                    android:padding="10dp"
                    android:text="Giao hàng tận nơi"
                    android:textAllCaps="false" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_bt_technology"
                    android:drawableTop="@drawable/iconmoney"
                    android:padding="10dp"
                    android:text="Thương gia đáng tin cậy"
                    android:textAllCaps="false" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_bt_technology"
                    android:drawableTop="@drawable/iconsercurity"
                    android:padding="10dp"
                    android:text="Bảo vệ khách hàng"
                    android:textAllCaps="false" />

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>